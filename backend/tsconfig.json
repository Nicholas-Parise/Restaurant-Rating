{
  "compilerOptions": {
    "allowJs": true,
    "target": "es2019",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
  },
  "include": [
    "middleware/**/*",
    "routes/**/*",
    "util/**/*",
    "*.ts",
    "*.js", 
    "utils/db.js",
    "banned-username-list.json"  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
